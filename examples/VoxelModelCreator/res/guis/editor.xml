<Frame
  name="Frame"
  width="fill_parent" height="fill_parent" minWidth="100" spacing="10"
  resizeTop="false" resizeLeft="false" resizeBottom="false" resizeRight="false"
  padding="10" border="1"
  vertical="false"
  styling="res/styling/styling.meta"
  >
<Container width="wrap_content">
  <Label>Settings</Label>
  <Divider name="divider"/>
  <TextBox width="fill_parent" height="20" hintText="Filename"></TextBox>

  <Button name="button">Save Model</Button>
  <Button name="button">Load Model</Button>
  <Button name="button">Export Model</Button>

  <Container vertical="false">
    <Label height="fill_parent" font="noto:14">Cube Color </Label>
    <ColorPicker name="cubeColor"/>
  </Container>

</Container>
<Container width="fill_parent" height="fill_parent">
  <Label font="noto:32">The quick brown fox jumps over the lazy dog</Label>
  <SceneView name="viewport" width="fill_parent" height="fill_parent" backgroundColor="#ff00ff"/>
</Container>
</Frame>
