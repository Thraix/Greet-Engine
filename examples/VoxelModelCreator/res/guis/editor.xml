<Frame
  name="Frame"
  width="fill_parent" height="fill_parent" minWidth="100" spacing="10"
  resizeTop="false" resizeLeft="false" resizeBottom="false" resizeRight="false"
  padding="10" border="1"
  borderColor="#37474f" 
  backgroundColor="#263238" 
  verticalAlign="false"
  >
<Container width="150">
  <Label 
    fontSize="16" font="noto" color="#90a4ae">Settings</Label>
  <Divider name="divider" backgroundColor="#90a4ae"/>
  <TextBox
    width="fill_parent" height="20"
    backgroundColor="#37474f" borderColor="#455a64" 
    border="1" font="noto" fontSize="14" color="#90a4ae"
    hintColor="#263238" hintText="Filename"
    radius="6" borderRadius="7"
    padding="0 5"></TextBox>

  <Button width="fill_parent" height="20" name="button"
    backgroundColor="#37474f" borderColor="#455a64" 
    hoverbackgroundColor="#37474f" hoverborderColor="#455a64" 
    color="#90a4ae" fontSize="14" font="noto"
    hoverborder="1"
    radius="2" borderRadius="3"
    hoverradius="2" hoverborderRadius="3"
    border="1 1 1 1">Save Model</Button>

  <Button width="fill_parent" height="20" name="button"
    backgroundColor="#37474f" borderColor="#455a64" 
    hoverbackgroundColor="#37474f" hoverborderColor="#455a64" 
    color="#90a4ae" fontSize="14" font="noto"
    hoverborder="1"
    radius="2" borderRadius="3"
    hoverradius="2" hoverborderRadius="3"
    border="1 1 1 1">Load Model</Button>

  <Button width="fill_parent" height="20" name="button"
    backgroundColor="#37474f" borderColor="#455a64" 
    hoverbackgroundColor="#37474f" hoverborderColor="#455a64" 
    color="#90a4ae" fontSize="14" font="noto"
    hoverborder="1"
    radius="2" borderRadius="3"
    hoverradius="2" hoverborderRadius="3"
    border="1 1 1 1">Export Model</Button>


  <Container width="fill_parent" verticalAlign="false">
    <Label width="wrap_content" height="fill_parent" fontSize="14" font="noto" color="#90a4ae">Cube Color: </Label>

    <ColorPicker
      width="60" height="20" name="cubeColor"
      backgroundColor="#ffffff"
      borderColor="#455a64" 
      border="2"
      radius="4"
      borderRadius="6"
      />
  </Container>
  <Container width="fill_parent" verticalAlign="false">
    <Component width="1w"/>
    <Component roundedPrecision="10" radius="30" width="100" height="100" backgroundColor="#000000" border="4" borderColor="#ffffff" borderRadius="32"/>
    <Component width="1w"/>
  </Container>
</Container>
<Container width="fill_parent" height="fill_parent">
  <Label width="wrap_content" height="wrap_content" fontSize="64" font="noto" color="#90a4ae">The quick brown fox jumps over the lazy dog</Label>
  <SceneView name="viewport" width="fill_parent" height="fill_parent" backgroundColor="#ff00ff"/>
</Container>
</Frame>
