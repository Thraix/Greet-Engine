<Frame
  border="1"
  borderColor="#37474f" 
  backgroundColor="#263238" 
  padding="10"
  verticalAlign="false">
  <SatValSlider width="200" height="200"
    backgroundColor="#37474f" borderColor="#455a64">
    <Component
      borderColor="#000000" 
      backgroundColor="#ffffff" 
      border="2"
      width="7" height="7"/>
  </SatValSlider>

  <HueSlider width="20" height="fill_parent"
    borderColor="#455a64" vertical="true">
    <Component
      borderColor="#000000" 
      backgroundColor="#ffffff" 
      border="2"
      width="fill_parent" height="7"/>
  </HueSlider>

  <Container width="150" height="fill_parent">
    <Container verticalAlign="false" width="fill_parent">
      <Container spacing="5"  width="1w" verticalAlign="false">
        <Label gravity="center" height="1w" font="noto" fontSize="20">R</Label>
        <TextBox padding="0 5" radius="5" borderRadius="7" 
          border="2" height="30" width="1w" font="noto"
          backgroundColor="#37474f" borderColor="#455a64" />
      </Container>
      <Container spacing="5"  width="1w" verticalAlign="false">
        <Label gravity="center" height="1w" font="noto" fontSize="20">H</Label>
        <TextBox padding="0 5" radius="5" borderRadius="7" 
          border="2" height="30" width="1w" font="noto"
          backgroundColor="#37474f" borderColor="#455a64" />
      </Container>
    </Container>

    <Container verticalAlign="false" width="fill_parent">
      <Container spacing="5"  width="1w" verticalAlign="false">
        <Label gravity="center" height="1w" font="noto" fontSize="20">G</Label>
        <TextBox padding="0 5" radius="5" borderRadius="7" 
          border="2" height="30" width="1w" font="noto"
          backgroundColor="#37474f" borderColor="#455a64" />
      </Container>
      <Container spacing="5"  width="1w" verticalAlign="false">
        <Label gravity="center" height="1w" font="noto" fontSize="20">S</Label>
        <TextBox padding="0 5" radius="5" borderRadius="7" 
          border="2" height="30" width="1w" font="noto"
          backgroundColor="#37474f" borderColor="#455a64" />
      </Container>
    </Container>

    <Container verticalAlign="false" width="fill_parent">
      <Container spacing="5"  width="1w" verticalAlign="false">
        <Label gravity="center" height="1w" font="noto" fontSize="20">B</Label>
        <TextBox padding="0 5" radius="5" borderRadius="7" 
          border="2" height="30" width="1w" font="noto"
          backgroundColor="#37474f" borderColor="#455a64" />
      </Container>
      <Container spacing="5"  width="1w" verticalAlign="false">
        <Label gravity="center" height="1w" font="noto" fontSize="20">V</Label>
        <TextBox padding="0 5" radius="5" borderRadius="7" 
          border="2" height="30" width="1w" font="noto"
          backgroundColor="#37474f" borderColor="#455a64" />
      </Container>
    </Container>

    <Container spacing="5" verticalAlign="false" width="fill_parent">
      <Label gravity="center" height="1w" font="noto" fontSize="20">#</Label>
      <TextBox padding="0 5" radius="5" borderRadius="7" 
        border="2" height="30" width="1w" font="noto"
        backgroundColor="#37474f" borderColor="#455a64" />
    </Container>

    <Component width="fill_parent" height="fill_parent"
      border="2"
      backgroundColor="#37474f" borderColor="#455a64" />
  </Container>
</Frame>
