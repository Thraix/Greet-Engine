<Frame
  name="TopComponent"
  width="400px" height="fill_parent" minWidth="100px" spacing="10px"
  resizeTop="false" resizeLeft="false" resizeBottom="false" resizeRight="true"
  padding="10px" border="1px"
  borderColor="#37474f" 
  backgroundColor="#263238" 
  >
  <Label 
    fontSize="18px" font="roboto" color="#90a4ae">Frame header</Label>

  <Divider name="divider" backgroundColor="#90a4ae"/>
  <Label color="#455a64" font="roboto" fontSize="20">Do you like Popcorn?</Label>

  <RadioGroup name="Radio" width="fill_parent" height="wrap_content" margin="0" spacing="10px">
    <Container verticalAlign="false">
      <RadioButton width="16px" height="16px" 
        radius="8" activeradius="8"
        backgroundColor="#263238" borderColor="#455a64" border="1px" 
        activebackgroundColor="#455a64" activeborderColor="#455a64" activeborder="1px"/>
      <Label color="#455a64" font="roboto" fontSize="12">Yes</Label>
    </Container>
    <Container verticalAlign="false">
      <RadioButton width="16px" height="16px" 
        radius="8" activeradius="8"
        backgroundColor="#263238" borderColor="#455a64" border="1px" 
        activebackgroundColor="#455a64" activeborderColor="#455a64" activeborder="1px"/>
      <Label color="#455a64" font="roboto" fontSize="12">No</Label>
    </Container>
    <Container verticalAlign="false">
      <RadioButton width="16px" height="16px" 
        radius="8" activeradius="8"
        backgroundColor="#263238" borderColor="#455a64" border="1px" 
        activebackgroundColor="#455a64" activeborderColor="#455a64" activeborder="1px"/>
      <Label color="#455a64" font="roboto" fontSize="12">Maybe</Label>
    </Container>
  </RadioGroup>

  <Button width="fill_parent" height="20px" 
    backgroundColor="#37474f" borderColor="#455a64" 
    hoverbackgroundColor="#37474f" hoverborderColor="#455a64" 
    color="#90a4ae" fontSize="16px" font="roboto"
    hoverborder="1px"
    radius="8px" borderRadius="9px"
    hoverradius="5px" hoverborderRadius="9px"
    border="1px 1px 1px 1px">Button!</Button>

  <TextBox
    width="fill_parent" height="20px"
    backgroundColor="#37474f" borderColor="#455a64" 
    border="1px" font="roboto" fontSize="16px" color="#90a4ae"
    hintColor="#263238" hintText="Username"
    radius="6px" borderRadius="7px"
    padding="0px 10px"></TextBox>

  <TextBox
    width="fill_parent" height="20px"
    backgroundColor="#37474f" borderColor="#455a64" 
    border="1px" font="roboto" fontSize="16px" color="#90a4ae"
    hintColor="#263238" hintText="Password"
    radius="6px" borderRadius="7px"
    padding="0px 10px" password="true" ></TextBox>

  <Slider
    name="Slider"
    backgroundColor="#37474f" 
    borderColor="#455a64" 
    border="1px"
    width="fill_parent" height="25px" margin="0"
    minValue="10" maxValue="90" defaultValue="30" stepSize="10" indicatorInside="true">
    <Component
      borderColor="#263238" 
      backgroundColor="#455a64" 
      width="5px" height="fill_parent" margin="0px"
      border="1px"
      />
  </Slider>

  <Label
    padding="0"
    fontSize="12px" font="roboto" color="#90a4ae">Test label</Label>

  <Container 
    width="fill_parent"
    height="100px"
    verticalAlign="false" padding="0">

    <ProgressBar
      width="20px" height="fill_parent" name="progressBarVertical"
      backgroundColor="#37474f" 
      borderColor="#455a64" 
      progressColor="#607d8b"
      border="1px" padding="0"
      radius="9"
      borderRadius="10"
      minValue="0.25" maxValue="1.25" vertical="true"/>

    <Divider backgroundColor="#455a64" vertical="true"/>

    <ProgressBar
      width="20px" height="fill_parent" name="progressBarVerticalReverse"
      backgroundColor="#37474f" 
      borderColor="#455a64" 
      progressColor="#607d8b"
      border="1px" padding="0"
      radius="9"
      borderRadius="10"
      minValue="0.25" maxValue="1.25" vertical="true" reverseProgress="true"/>

    <Divider backgroundColor="#455a64" vertical="true"/>

    <Slider
      backgroundColor="#37474f" 
      borderColor="#455a64" 
      border="1px"
      vertical="true"
      width="25px" height="fill_parent" margin="0"
      minValue="10" maxValue="90" defaultValue="30" stepSize="10" indicatorInside="true">
      <Component
        borderColor="#263238" 
        backgroundColor="#455a64" 
        width="fill_parent" height="5px" margin="0px"
        border="1px"
        />
    </Slider>

  </Container>

  <ProgressBar
    width="fill_parent" height="20px" name="progressBar" 
    backgroundColor="#37474f" 
    borderColor="#455a64" 
    progressColor="#607d8b"
    border="1px" 
    radius="9"
    borderRadius="10"
    minValue="0.25" maxValue="1.25"/>

  <ProgressBar
    width="fill_parent" height="20px" name="progressBarReverse"
    backgroundColor="#37474f" 
    borderColor="#455a64" 
    progressColor="#607d8b"
    border="1px" padding="0"
    radius="9"
    borderRadius="10"
    minValue="0.25" maxValue="1.25" reverseProgress="true"/>
</Frame>
