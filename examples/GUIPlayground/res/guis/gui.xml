<Frame
  width="200px" height="100%" minWidth="100px" spacing="10px"
  resizeTop="false" resizeLeft="false" resizeBottom="false" resizeRight="true"
  padding="10px" border="1px"
  borderColor="#ff00ff" backgroundColor="#000077">
  <Component
    borderColor="#00ff00" border="1px"
    minWidth="150px" width="100%" height="50px" backgroundColor="#ff00ff">Press me!</Component>
  <Button width="100%" height="40px" 
    hoverborderColor="#153cd8" borderColor="#153cd8" 
    hoverbackgroundColor="#4265f4" backgroundColor="#4265f4" 
    color="#44ee77" fontSize="20px" font="roboto"
    hoverborder="4px"
    border="0px 4px 4px 4px">Button!</Button>
  <Component
    width="75%" height="50px" backgroundColor="#ff0000">Press me!</Component>
  <Component
    width="50%" height="50px" backgroundColor="#0000ff">Press me!</Component>
  <Label
    fontSize="12px" font="roboto" color="#ffffff">Test label</Label>
</Frame>
