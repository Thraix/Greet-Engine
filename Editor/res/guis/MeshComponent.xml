  <Container width="1w" vertical="true" padding="10" spacing="5" border="2">
    <Label name="meshLabel" width="1w">Mesh Type</Label>
    <DropDownMenu name="meshType" width="1w">
      <DropDownItem>cube</DropDownItem>
      <DropDownItem>sphere</DropDownItem>
      <DropDownItem>plane</DropDownItem>
      <DropDownItem>model</DropDownItem>
    </DropDownMenu>
    <Label name="meshPathLabel" width="1w">Mesh Path</Label>
    <TextBox name="meshPath" width="1w"/>
  </Container>
</Container>
